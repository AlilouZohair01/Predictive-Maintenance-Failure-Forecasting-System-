# Use specific python version for stability
FROM python:3.9-slim

# Set working directory
WORKDIR /app

# Install system dependencies (often needed for heavy ML libraries)
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first to leverage Docker cache
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the application code and the trained model artifacts
# (Assumes you run training before building docker image)
COPY app.py .
COPY lstm_rul_model.h5 .
COPY scaler.pkl .

# Expose the port FastAPI runs on
EXPOSE 8000

# Command to run the application
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]